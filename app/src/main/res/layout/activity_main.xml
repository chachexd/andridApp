<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#232425">

    <!-- Barra de navegación y contenido principal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="224dp"
        android:orientation="vertical"
        android:paddingTop="30dp"
        > <!-- Deja espacio arriba para el botón -->

        <!-- Título de la información -->

        <!-- TabLayout para las pestañas -->


        <TextView
            android:id="@+id/txtTextoInformacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Bienvenido, Usuario"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:paddingBottom="30dp"/>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:background="#FFC107" />

        <!-- ViewPager para las pestañas -->
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="34dp" />
    </LinearLayout>


</FrameLayout>
